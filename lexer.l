%{
#include "parser.tab.h"  // Include the header file generated by Bison
#include <stdlib.h>      // Include stdlib for atoi()
%}

%%

[0-9]+   { yylval.num = atoi(yytext); return NUMBER; }  // Use yylval.num
[+\-*/]  { return yytext[0]; }  // Return the character itself
\n       { return 0; }          // Stop processing on newline
[ \t]    { /* Ignore whitespace */ }
.        { printf("Unexpected character: %s\n", yytext); }

%%

int yywrap() { return 1; }
